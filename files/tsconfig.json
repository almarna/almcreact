{
    "compilerOptions": {
        "target": "es2016",
        "module": "esnext",
        "lib": ["ESNext", "DOM"],
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "typeRoots": ["node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}
